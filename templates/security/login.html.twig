{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post" class="max-w-lg mx-auto">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as
                {{ app.user.userIdentifier }},
                <a href="{{ path('logout') }}">Logout</a>
            </div>
        {% endif %}
        
        <div class="flex flex-col items-center space-y-4">
            <img src="{{ asset('images/logo-mobile.jpg') }}" alt="Logo mobile" class="max-w-xs md:max-w-md lg:max-w-lg">
            <h1 class="text-[15px] pl-14 pr-14 text-center md:text-[20px] lg:text-[30px] font-semibold">Ajoute ton grain de sel… ou verse la salière entière.</h1>
            <h2 class="text-[30px] pb-8 pl-13 pr-13 text-center md:text-[40px] lg:text-[50px]">Connectez-vous à Saltnet</h2>
        </div>

        <div class="flex flex-col items-center space-y-6">
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="text-white bg-[#21213B] placeholder:text-[12px] placeholder:md:text-[16px] placeholder:lg:text-[18px] text-center rounded-full border-1 border-[#FF1B1C] md:w-96 lg:w-[400px] py-2 px-4 mx-auto" autocomplete="email" required autofocus placeholder="Email" aria-label="Email">
            
            <input type="password" name="_password" id="password" class="text-white bg-[#21213B] placeholder:text-[12px] placeholder:md:text-[16px] placeholder:lg:text-[18px] text-center rounded-full border-1 border-[#FF1B1C] md:w-96 lg:w-[400px] py-2 px-4 mx-auto" autocomplete="current-password" required placeholder="Mot de passe" aria-label="Mot de passe">

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <button class="mt-4 w-24 bg-[#FF1B1C] opacity-75 hover:opacity-100 text-white text-[12px] md:text-[16px] lg:text-[18px] text-center py-1 rounded-full md:w-32 lg:w-40" type="submit" aria-label="Se connecter">
                Se connecter
            </button>
        </div>
    </form>

    <div class="flex justify-center mt-8">
        <a href="{{ path('app_forgot_password_request') }}" class="w-34 text-white text-[12px] md:text-[16px] lg:text-[18px] text-center py-1 rounded-full md:w-40 lg:w-48" aria-label="Mot de passe oublié ?">Mot de passe oublié ?</a>
    </div>
{% endblock %}

