<div class="flex justify-center mt-4">
    <nav>
        <ul class="flex space-x-2">
            {% if pagination.previous %}
                <li>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pagination.previous})) }}"
                       class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400">
                        Previous
                    </a>
                </li>
            {% endif %}
            {% for p in pagination.pagesInRange %}
                <li>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': p})) }}"
                       class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400">
                        {{ p }}
                    </a>
                </li>
            {% endfor %}
            {% if pagination.next %}
                <li>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pagination.next})) }}"
                       class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400">
                        Next
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</div>
