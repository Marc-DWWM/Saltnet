{% extends 'base.html.twig' %}
{% block title %}Modifier Profil
{% endblock %}
{% block body %}
	<div class="mb-6 flex svg-post">
		<a href="{{ path('home') }}">
			<svg class="svg-post" xmlns="http://www.w3.org/2000/svg" height="32" width="28" viewbox="0 0 448 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path fill="#e0e0e0" d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>
		</a>

		<h1 class="w-100 text-center pt-1">Modifier le profil</h1>
	</div>
	<div class="mt-4 flex flex-col justify-center items-center text-[#E0E0E0]">
		<h2 class="pb-2">Ajouter une image</h2>
		<div class=" flex flex-col justify-center items-center">
			{{ form_start(pictureProfil) }}
			{{ form_row(pictureProfil.picture) }}
		</div>
		<h3 class="pb-2">Modifier username</h3>
		{{ form_row(pictureProfil.username) }}
		<button type="submit" class="mt-6 w-24 bg-[#FF1B1C] opacity-75 hover:opacity-100 text-white text-[12px] text-center py-1 rounded-full">Valider</button>
		{{ form_end(pictureProfil) }}
	</div>
	<div class="mt-4 flex flex-col justify-center items-center text-[#E0E0E0]">
		<h4 class="pb-2">Supprimer son compte</h4>
		<form method="POST" action="{{ path('profile_delete_user', { 'id': user.id }) }}">
			  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
			<button class="mt-4 w-24 bg-[#FF1B1C] opacity-75 hover:opacity-100 text-white text-[12px] text-center py-1 rounded-full" type="submit">
				Supprimer
			</button>
		</form>
	</div>
{% endblock %}
