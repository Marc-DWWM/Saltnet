{% extends 'base.html.twig' %}

{% block title %}Modifier Profil
{% endblock %}

{% block body %}
	<div class="mb-6 flex items-center justify-center gap-4 px-4 md:px-12">
		<a href="{{ path('home') }}" aria-label="Retour Ã  l'accueil">
			<svg class="svg-post" xmlns="http://www.w3.org/2000/svg" height="32" width="28" viewbox="0 0 448 512">
				<path fill="#e0e0e0" d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H109.2l105.7-105.4c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L9.4 233.4z"/>
			</svg>
		</a>
		<h1 class="text-lg md:text-2xl text-center w-full">Modifier le profil</h1>
	</div>

	<div class="mt-6 px-4 md:px-12 flex flex-col justify-center items-center text-[#E0E0E0] gap-8">
		<div class="w-full md:w-1/2 flex flex-col items-center">
			<h2 class="pb-2 text-center md:text-left text-base md:text-lg">Ajouter une image</h2>
			{{ form_start(pictureProfil) }}
			<div class="flex flex-col items-center md:items-start">
				{{ form_row(pictureProfil.picture) }}
			</div>

			<div class="mt-4 flex justify-center md:justify-start w-full">
				{{ form_row(pictureProfil.username) }}
			</div>

			<div class="flex justify-center w-full">
				<button type="submit" aria-label="Valider la modification du profil" class="mt-6 w-28 bg-[#FF1B1C] opacity-75 hover:opacity-100 text-white text-sm text-center py-2 rounded-full">
					Valider
				</button>
			</div>
			{{ form_end(pictureProfil) }}
		</div>

		<div class="w-full md:w-1/3 flex flex-col items-center">
			<h4 class="pb-2 text-center text-base md:text-lg">Supprimer son compte</h4>
			<form method="POST" action="{{ path('profile_delete_user', { 'id': user.id }) }}">
				<input type="hidden" name="_method" value="DELETE">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
				<button type="submit" aria-label="Supprimer son compte" class="mt-6 w-28 bg-[#FF1B1C] opacity-75 hover:opacity-100 text-white text-sm text-center py-2 rounded-full">
					Supprimer
				</button>
			</form>
		</div>
	</div>
{% endblock %}
