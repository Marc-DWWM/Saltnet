				{% if app.user.photo is not null and app.user.photo|length > 0 %}
					<img class="img-profile" src="{{ asset('uploads/' ~ app.user.photo) }}" alt="Photo de profil">
				{% else %}
					<p>Aucune photo de profil.</p>
				{% endif %}
				<p>Username :
					{{ app.user.username }}</p>
