{% extends 'base.html.twig' %}

{% block title %}Hello ReportController!
{% endblock %}

{% block body %}
	<div class="mb-6 flex svg-post">
		<a href="{{ path('home') }}">
			<svg class="svg-post" xmlns="http://www.w3.org/2000/svg" height="32" width="28" viewbox="0 0 448 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path fill="#e0e0e0" d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>
		</a>
		<h1 class="w-100 text-center pt-1">Signaler un problème</h1>
	</div>

	<h2 class="pb-4 text-center">Quel type de problème signalez-vous ?</h2>
	<div class="flex flex-col justify-center items-center">
		{{ form_start(form) }}
		{{ form_row(form.reason_reporting) }}
		<h3 class="pb-4 pt-4 text-center">Utilisateur signaler</h3>
		{{ form_row(form.user_report) }}
		<button type="submit" class="mt-6 bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-full">Envoyer</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
