        <h1>Tableau de bord</h1>
        <div class="row">
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Utilisateurs</h4>
                    </div>
                    <div class="card-body">
                        <p>Nombre total d'utilisateurs : {{ userCount }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
